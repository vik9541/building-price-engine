# Database
DATABASE_URL=postgresql://user:password@postgres:5432/building_db
REDIS_URL=redis://redis:6379/0

# Parsers Settings
PETROV_URL=https://www.petrov.ru
LEROY_URL=https://www.leroymerlin.ru
OBI_URL=https://www.obi.ru

# Parsing Schedule (in minutes)
PARSE_INTERVAL=60
PRICE_CHECK_INTERVAL=30
PRICE_CALCULATE_INTERVAL=60

# Pricing Strategy
MARKUP_MIN=10
MARKUP_MAX=30
COMPETITOR_WEIGHT=0.7
POPULARITY_WEIGHT=0.2
MIN_MARGIN_RUB=50

# API Settings
API_WORKERS=4
API_PORT=8000
API_DEBUG=False
API_HOST=0.0.0.0
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Image Storage
IMAGE_STORAGE_PATH=/app/storage/images
IMAGE_MAX_SIZE_MB=10

# Parser Headers
PARSER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
PARSER_TIMEOUT=30
PARSER_RETRIES=3

# Logging
LOG_LEVEL=INFO
LOG_PATH=/app/logs
